<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <title>Skills Page</title>
</head>
<body>
  
  <h1>Skills as of <%= time %></h1>
    <ul>
          <% skills.forEach(function(t) { %>
            <li>
              <form action="/skills/<%= t.id %>?_method=DELETE" class="delete-form" method="POST">
                <button type="submit">X</button>
              </form>
              <a href="/skills/<%= t.id %>"><%= t.skill %></a>
              <%= t.skill %>
                - 
              <%= t.learned ? 'done' : 'not done' %>
            </li>
          <% }); %>
        </ul>
        <a href="/skills/new">Add a Skill</a>
        <br>
        <br>
      <a href="/">Home Page</a>
</body>

</html>